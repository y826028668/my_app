page,
view,
text,
swiper,
swiper-item,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  --themeColor: #f8544c;
  font-size: 28rpx;
}
image {
  width: 100%;
}
.cart .address-btn {
  text-align: center;
  margin: 10rpx 0;
}
.cart .user_info {
  padding-left: 20rpx;
  text-align: left;
}
.cart .goods_wrap {
  margin-bottom: 200rpx;
}
.cart .goods_wrap .title {
  padding-left: 20rpx;
  margin: 20rpx 0;
  font-size: 36rpx;
  line-height: 2;
  border-top: 1px solid var(--themeColor);
  border-bottom: 1px solid var(--themeColor);
}
.cart .goods_wrap .goods_list .goods_item {
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #ccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.cart .goods_wrap .goods_list .goods_item .select_group,
.cart .goods_wrap .goods_list .goods_item .img_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart .goods_wrap .goods_list .goods_item .select_group {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.cart .goods_wrap .goods_list .goods_item .img_wrap {
  -webkit-box-flex: 4;
  -webkit-flex: 4;
          flex: 4;
}
.cart .goods_wrap .goods_list .goods_item .img_wrap image {
  width: 70%;
}
.cart .goods_wrap .goods_list .goods_item .right_content {
  -webkit-box-flex: 8;
  -webkit-flex: 8;
          flex: 8;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.cart .goods_wrap .goods_list .goods_item .right_content .goods_title {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .price {
  font-weight: 600;
  color: var(--themeColor);
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .delete {
  margin-left: 20rpx;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .delete .u-icon {
  line-height: 46rpx;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .minus,
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .plus,
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .num {
  display: inline-block;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .minus,
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .plus {
  width: 46rpx;
  border: 1px solid #ccc;
  color: #666;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .minus:active,
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .plus:active {
  background: #ccc;
  color: #fff;
}
.cart .goods_wrap .goods_list .goods_item .right_content .price_info .goods_number .num {
  padding: 0 20rpx;
}
.cart .goods_wrap .payment {
  position: fixed;
  bottom: 0;
  left: 0;
  padding-left: 20rpx;
  width: 100%;
  border-top: 1px solid #ccc;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.cart .goods_wrap .payment .select_group,
.cart .goods_wrap .payment .clearing {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart .goods_wrap .payment .select_group {
  -webkit-box-flex: 1.5;
  -webkit-flex: 1.5;
          flex: 1.5;
}
.cart .goods_wrap .payment .total {
  -webkit-box-flex: 1.5;
  -webkit-flex: 1.5;
          flex: 1.5;
  text-align: right;
  padding-right: 20rpx;
}
.cart .goods_wrap .payment .total .t {
  font-size: 34rpx;
  color: var(--themeColor);
  font-weight: 600;
}
.cart .goods_wrap .payment .total .yunfei {
  font-size: 26rpx;
}
.cart .goods_wrap .payment .clearing {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  background: var(--themeColor);
}

