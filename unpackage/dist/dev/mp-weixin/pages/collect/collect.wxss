page,
view,
text,
swiper,
swiper-item,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  --themeColor: #f8544c;
  font-size: 28rpx;
}
image {
  width: 100%;
}
.collect .collect_list .item {
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
}
.collect .collect_list .item .item_a {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.collect .collect_list .item .img_wrap {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.collect .collect_list .item .img_wrap .img {
  width: 70%;
  height: 70%;
}
.collect .collect_list .item .content {
  -webkit-box-flex: 4;
  -webkit-flex: 4;
          flex: 4;
  padding: 30rpx 0;
  padding-right: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.collect .collect_list .item .content .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect .collect_list .item .content .price {
  color: var(--themeColor);
}

