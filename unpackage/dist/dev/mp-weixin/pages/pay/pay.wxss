page,
view,
text,
swiper,
swiper-item,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  --themeColor: #f8544c;
  font-size: 28rpx;
}
image {
  width: 100%;
}
page {
  background: #edece8;
}
.pay .address {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  padding-bottom: 30rpx;
  line-height: 2;
  background: #fff;
}
.pay .address .user_name {
  font-size: 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.pay .address .detail_address {
  color: #666;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.pay .goods_list .goods_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}
.pay .goods_list .goods_item .img_wrap {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay .goods_list .goods_item .goods_title {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  padding: 0 20rpx;
}
.pay .goods_list .goods_item .goods_price {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: right;
}
.pay .distribution_mode {
  background: #fff;
}
.pay .distribution_mode .fangshi,
.pay .distribution_mode .jine {
  padding: 0 20rpx;
}
.pay .distribution_mode .fangshi {
  border-top: 20rpx solid #edece8;
  border-bottom: 30rpx solid #edece8;
}
.pay .distribution_mode .ps,
.pay .distribution_mode .msg,
.pay .distribution_mode .goods_jine,
.pay .distribution_mode .yunfei {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  line-height: 2.6;
}
.pay .distribution_mode .total {
  text-align: right;
  line-height: 3;
}
.pay .distribution_mode .total .total_price {
  color: var(--themeColor);
}
.pay .distribution_mode .msg,
.pay .distribution_mode .total {
  border-top: 1px solid #f0f0f0;
}
.pay .distribution_mode .msg {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay .distribution_mode .msg2 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin: 0 40rpx;
}
.pay .submit_order {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
}
.pay .submit_order .heji,
.pay .submit_order .submit {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay .submit_order .heji {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  border-top: 1px solid #ccc;
  padding-right: 20rpx;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.pay .submit_order .heji .zong {
  color: var(--themeColor);
}
.pay .submit_order .submit {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 26rpx;
  background: var(--themeColor);
  color: #fff;
}
.pay .submit_order .submit:active {
  background: #f73d33;
}

