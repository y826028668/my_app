page,
view,
text,
swiper,
swiper-item,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  --themeColor: #f8544c;
  font-size: 28rpx;
}
image {
  width: 100%;
}
.goods_detail .goods_price,
.goods_detail .goods_name_wrap,
.goods_detail .goods_info {
  padding: 0 20rpx;
}
.goods_detail .wrap .u-swiper-item .u-list-image-wrap {
  background-color: #ffffff !important;
  text-align: center !important;
}
.goods_detail .wrap .u-swiper-item .u-list-image-wrap .u-swiper-image {
  width: 60%;
  display: inline-block;
}
.goods_detail .u-indicator-item-dot-active {
  background-color: #000000 !important;
}
.goods_detail .goods_price {
  font-weight: 600;
  color: var(--themeColor);
}
.goods_detail .goods_name_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #666666;
  border-bottom: 10rpx solid #dedede;
}
.goods_detail .goods_name_wrap .goods_name {
  -webkit-box-flex: 4;
  -webkit-flex: 4;
          flex: 4;
  margin: 8rpx 0;
  padding-right: 10rpx;
  border-right: 1px solid #666666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_detail .goods_name_wrap .goods_collect {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  color: #666666;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods_detail .goods_name_wrap .goods_collect .active {
  color: var(--themeColor);
}
.goods_detail .goods_name_wrap .goods_collect .collect_text {
  font-size: 22rpx;
}
.goods_detail .goods_info {
  margin-bottom: 90rpx;
}
.goods_detail .info_title {
  font-weight: 600;
  color: var(--themeColor);
  line-height: 3;
  font-size: 30rpx;
  border-bottom: 1px solid #999999;
}
.goods_detail .b_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 90rpx;
  background: #ffffff;
}
.goods_detail .b_tool .service,
.goods_detail .b_tool .share,
.goods_detail .b_tool .cart,
.goods_detail .b_tool .add_cart,
.goods_detail .b_tool .buy_now {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods_detail .b_tool .service,
.goods_detail .b_tool .share,
.goods_detail .b_tool .cart {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  font-size: 24rpx;
  border-top: 1px solid #999999;
  position: relative;
  color: #999;
}
.goods_detail .b_tool .service button,
.goods_detail .b_tool .share button,
.goods_detail .b_tool .cart button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_detail .b_tool .add_cart,
.goods_detail .b_tool .buy_now {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  color: #fff;
}
.goods_detail .b_tool .add_cart {
  background: #ff9900;
}
.goods_detail .b_tool .buy_now {
  background: var(--themeColor);
}

