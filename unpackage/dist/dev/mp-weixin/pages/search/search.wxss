page,
view,
text,
swiper,
swiper-item,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  --themeColor: #f8544c;
  font-size: 28rpx;
}
image {
  width: 100%;
}
page {
  background-color: #edece8;
  padding: 0 20rpx;
}
.search .top input {
  padding: 0 20rpx;
  margin: 20rpx 0;
  background: #fff;
  height: 70rpx;
  line-height: 4;
}
.search .item {
  margin-bottom: 2px;
  padding: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: #FFFFFF;
  line-height: 3;
}

